<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layoutFragment"
    tools:context=".ModeSelection">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ModeSelect">

        <Button
            android:id="@+id/btnBack"
            android:layout_width="41dp"
            android:layout_height="37dp"
            android:background="@android:color/transparent"
            android:foreground="@mipmap/back"
            app:layout_constraintBottom_toTopOf="@+id/textView5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />
        <Button
            android:id="@+id/btneasy"
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="2dp"
            android:text="EASY ( 3 x 4 )"
            app:layout_constraintBottom_toTopOf="@+id/btnhard"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView5" />

        <Button
            android:id="@+id/btnhard"
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:layout_marginBottom="254dp"
            android:text="HARD ( 4 x 4 )"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btneasy" />

        <Button
            android:id="@+id/btnsuperhard"
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="200dp"
            android:text="SUPER HARD ( 5 x 4 )"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnhard"
            app:layout_constraintVertical_bias="1.0" />

        <Button
            android:id="@+id/btntwoplayer"
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:text="Two Player(5 X 4)"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.78" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="103dp"
            android:layout_marginTop="38dp"
            android:layout_marginEnd="104dp"
            android:layout_marginBottom="51dp"
            android:text="Mode Select"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textSize="36sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/btneasy"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView4" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="51dp"
            android:layout_marginTop="105dp"
            android:layout_marginEnd="52dp"
            android:layout_marginBottom="39dp"
            android:text="Flip Card Game"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textSize="45dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/textView5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>